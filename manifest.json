{
  "manifest_version": 3,
  "name": "YouTube Voice Assistant",
  "version": "1.0",
  "description": "Control YouTube videos with your voice.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en"
}
