{
    "manifest_version": 3,
    "name": "Guitar Voice Assistant",
    "version": "1.0",
    "description": "Control YouTube with your voice while practicing guitar.",
    "permissions": ["scripting", "activeTab", "tabs", "microphone"],
    "host_permissions": ["*://www.youtube.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  